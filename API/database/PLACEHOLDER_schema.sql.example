CREATE TABLE IF NOT EXISTS `placeholder_table` (
  -- Primary Key
  `id` INT AUTO_INCREMENT PRIMARY KEY,

  -- Core Fields (customize these based on your needs)
  `name` VARCHAR(255) NOT NULL,
  `description` TEXT DEFAULT NULL,
  `status` ENUM('active', 'inactive', 'pending', 'archived') DEFAULT 'active',

  -- Add your custom fields here
  -- Examples:
  -- `email` VARCHAR(255) UNIQUE,
  -- `price` DECIMAL(10,2),
  -- `quantity` INT DEFAULT 0,
  -- `category_id` INT,
  -- `image_url` VARCHAR(500),

  -- Audit Fields (who and when)
  `created_by` VARCHAR(100) DEFAULT NULL,
  `updated_by` VARCHAR(100) DEFAULT NULL,
  `deleted_by` VARCHAR(100) DEFAULT NULL,

  -- Timestamps
  `created_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  `updated_at` TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  `deleted_at` TIMESTAMP NULL DEFAULT NULL,

  -- Soft Delete Flag (0 = deleted, 1 = active)
  `is_active` TINYINT(1) DEFAULT 1,

  -- Indexes for performance
  KEY `idx_status` (`status`),
  KEY `idx_is_active` (`is_active`),
  KEY `idx_created_at` (`created_at`),
  KEY `idx_name` (`name`)

  -- Add foreign keys if needed
  -- FOREIGN KEY (`category_id`) REFERENCES `categories`(`id`) ON DELETE SET NULL

) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_unicode_ci;

